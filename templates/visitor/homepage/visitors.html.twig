{% extends "base.html.twig" %}

{% block body %}
    
<div class="row">
    <div class="col">
        <h1 class="mt-4 mb-4 bread text-center">Liste des Visiteurs</h1>

        <table class="table table-striped rounded text-center sortable">
            <thead>
                <tr class="text-white table-primary">
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Email</th>
                    <th>Ville</th>
                    <th>Code Postal</th>
                </tr>
            </thead>
            <tbody>
                {% for visitor in visitorArray %}
                    <tr class="item">
                        <td>{{ visitor.name }}</td>
                        <td>{{ visitor.firstName }}</td>
                        <td>{{ visitor.email }}</td>
                        <td>{{ visitor.city }}</td>
                        <td>{{ visitor.postalCode }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
    {{ parent() }}
{% endblock %}