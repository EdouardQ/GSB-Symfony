{% extends "base.html.twig" %}

{% block body %}
    
<div class="row">
    <div class="col">
        <h1 class="mt-4 mb-4 bread text-center">Liste des Medicaments</h1>

        {# affichage des messages flash: #}
        {% for message in app.flashes('noticeMedication') %}
        <p class="alert alert-success">{{ message }}</p>
        {% endfor %}

        <table class="table table-striped table-bordered rounded text-center sortable">
            <thead>
                <tr class="text-white table-primary">
                    <th>Id</th>
                    <th>Code</th>
                    <th>Nom</th>
                    <th>Famille</th>
                    <th>Composition</th>
                    <th>Effets secondaires</th>
                    <th>Contre indications</th>
                    <th><a href="{{ url('admin.medicationForm')}}" class="btn btn-light">Ajouter un m√©dicament</a></th>
                </tr>
            </thead>
            <tbody>
                {% for medication in medicationArray %}
                    <tr class="item">
                        <td>{{ medication.id }}</td>
                        <td>{{ medication.code }}</td>
                        <td>{{ medication.name }}</td>
                        <td>{{ medication.family }}</td>
                        <td>{{ medication.composition }}</td>
                        <td>{{ medication.sideEffects }}</td>
                        <td>{{ medication.contraindications }}</td>
                        <td>  
                            <a href="{{ url('admin.medicationForm', {id:medication.id})}}" class="btn btn-warning">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="https://www.kryogenix.org/code/browser/sorttable/sorttable.js"></script>
    {{ parent() }}
{% endblock %}